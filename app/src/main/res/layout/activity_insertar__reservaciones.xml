<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#c1bca0"
    tools:context="com.example.octavio.teamproapp.Insertar_Reservaciones">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#454545"
        android:textColor="#FFF"
        android:text="Reserva tu Sesión"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:id="@+id/tituloReservaciones"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/tituloReservaciones"
        android:id="@+id/cardviewreservaciones"
        android:background="#fff"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:background="#cfcfcf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="25sp"
        android:id="@+id/tituloCliente"
        android:textStyle="bold"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:id="@+id/nombreClienteET"
        android:layout_below="@id/tituloCliente"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreClienteET"
        android:text="Télefono"
        android:textSize="25sp"
        android:id="@+id/TVTelefonoCliente"
        android:textStyle="bold"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/telefonoCliente"
        android:maxLength="8"
        android:inputType="phone"
        android:layout_below="@+id/TVTelefonoCliente"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefonoCliente"
        android:text="Tipo de Sesión"
        android:textSize="25sp"
        android:id="@+id/tituloTipoSesion"
        android:textStyle="bold"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Sesion"
        android:id="@+id/tipoSesionET"
        android:layout_below="@id/tituloTipoSesion"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipoSesionET"
        android:text="Fecha Reservación"
        android:textSize="25sp"
        android:id="@+id/tituloFechaReservacion"
        android:textStyle="bold"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fechaReservacion"
        android:layout_below="@id/tituloFechaReservacion"
        android:inputType="date"
        android:focusable="false"
        android:clickable="true"
        android:hint="04-05-2018"
        android:maxLines="1" />
        </RelativeLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservar"
        android:layout_below="@+id/cardviewreservaciones"
        android:layout_centerHorizontal="true"
        android:id="@+id/botonReservar"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="#4d4b4b"
        android:layout_margin="10dp"
        android:padding="10dp"
        />


</RelativeLayout>
