<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentSesiones"
    android:background="#FFE0B2"
        android:orientation="vertical"
        tools:context="com.example.octavio.teamproapp.sesiones">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#cec4c4"
            >

             <ImageButton
                android:id="@+id/buttonLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vista"
                android:tooltipText="Lista"
                android:layout_weight="1"
                 android:onClick="onClick"/>
            <ImageButton
                android:tooltipText="CuadrÃ­cula"
                android:id="@+id/buttonGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gridicon"
                android:layout_weight="1"
                android:onClick="onClick"
                />


        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerSesiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#cfc5c5"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


