<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
       card_view:contentPaddingRight="5dp"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

             <ImageView
                android:layout_width="wrap_content"
                 android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:id="@+id/camerasesion"
        android:src="@drawable/sesioncamera"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/camerasesion"
        android:layout_height="wrap_content"
        android:text="Sesion"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/tipoSesion"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/tipoSesion"
        android:id="@+id/fechaSesion"
        android:text="05-01-12"
        android:layout_toRightOf="@id/camerasesion"
        />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
